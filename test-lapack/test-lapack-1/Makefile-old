all : $(TARGETS)
	@echo Make Complete

$(TARGETS) : $(OBJ)
	$(CC) $(CC_FLAGS) $(OBJ) $(COMMON_INC) $(LIBRARIES) -o $(TARGETS) $(LAST_FLAGS)

run :
	./$(TARGETS)

clean :
	rm -rf *.out *~ *.o $(TARGETS)
