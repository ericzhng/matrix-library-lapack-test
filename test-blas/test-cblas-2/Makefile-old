FLNAME = blas2C
#  blas1C blas2bC blas2C blas3C

TARGETS = $(FLNAME)
OBJ = $(FLNAME).c

FC       = gfortran
CC       = gcc
CC_FLAGS   = -Wall
LAST_FLAGS = -lgfortran

CBLAS_FLAGS	= -I$(SOFTWARE_DIR)/blas/include $(CBLAS_LIB) $(BLAS_LIB)

COMMON_INC  =  -I./common ./common/blaio.c

all : $(TARGETS)
	@echo Make Complete

$(TARGETS) : $(OBJ)
	$(CC) $(CC_FLAGS) $(OBJ) $(COMMON_INC) $(CBLAS_FLAGS) -o $(TARGETS) $(LAST_FLAGS)

run :
	./$(TARGETS)

clean :
	rm -rf *.out *~ *.o $(TARGETS)
